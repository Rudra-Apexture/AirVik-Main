      "name": "User Login Logout",
      "item": [
        {
          "name": "User Login - Valid Credentials",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Use the email from registration if available",
                  "const testEmail = pm.collectionVariables.get('testEmail');",
                  "console.log('Using test email for login:', testEmail);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has success field', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('success', true);",
                  "});",
                  "",
                  "pm.test('Response contains user data', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('data');",
                  "    pm.expect(jsonData.data).to.have.property('user');",
                  "    ",
                  "    // Check for user properties with more flexibility",
                  "    const user = jsonData.data.user;",
                  "    pm.expect(user).to.have.property('id');",
                  "    pm.expect(user).to.have.property('email');",
                  "    ",
                  "    // Check for isEmailVerified or isActive",
                  "    pm.expect(user).to.satisfy(function(user) {",
                  "        return user.hasOwnProperty('isEmailVerified') || user.hasOwnProperty('isActive');",
                  "    }, 'User should have either isEmailVerified or isActive property');",
                  "});",
                  "",
                  "pm.test('Response contains tokens', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.data).to.have.property('accessToken');",
                  "    pm.expect(jsonData.data).to.have.property('refreshToken');",
                  "    ",
                  "    // Store tokens for subsequent requests",
                  "    if (jsonData.data.accessToken) {",
                  "        pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                  "    }",
                  "    if (jsonData.data.refreshToken) {",
                  "        pm.collectionVariables.set('refreshToken', jsonData.data.refreshToken);",
                  "    }",
                  "});",
                  "",
                  "pm.test('Tokens are properly formatted JWT', function () {",
                  "    const jsonData = pm.response.json();",
                  "    const accessToken = jsonData.data.accessToken;",
                  "    const refreshToken = jsonData.data.refreshToken;",
                  "    ",
                  "    // Check if tokens are in JWT format (three parts separated by dots)",
                  "    pm.expect(accessToken.split('.')).to.have.lengthOf(3);",
                  "    pm.expect(refreshToken.split('.')).to.have.lengthOf(3);",
                  "});",
                  "",
                  "pm.test('Response contains success message', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('message', 'Login successful');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
