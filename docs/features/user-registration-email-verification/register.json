{
  "layout": {
    "grid": "grid-cols-1 lg:grid-cols-2",
    "spacing": {
      "container": "p-8",
      "section": "space-y-6",
      "form": "space-y-4",
      "input": "space-y-2"
    }
  },
  "typography": {
    "fontFamily": "font-sans",
    "sizes": {
      "hero": "text-4xl lg:text-5xl",
      "heading": "text-2xl",
      "subheading": "text-lg",
      "body": "text-base",
      "small": "text-sm",
      "caption": "text-xs"
    },
    "weights": {
      "bold": "font-bold",
      "semibold": "font-semibold",
      "medium": "font-medium",
      "normal": "font-normal"
    }
  },
  "colors": {
    "primary": "bg-blue-600",
    "primaryHover": "hover:bg-blue-700",
    "text": "text-gray-900",
    "textMuted": "text-gray-600",
    "textLight": "text-white",
    "background": "bg-white",
    "backgroundGray": "bg-gray-50",
    "border": "border-gray-300",
    "borderFocus": "focus:border-blue-500"
  },
  "components": {
    "Button/Primary": {
      "base": "w-full py-3 px-4 rounded-lg font-medium transition-colors",
      "colors": "bg-blue-600 hover:bg-blue-700 text-white",
      "states": {
        "disabled": "disabled:opacity-50 disabled:cursor-not-allowed"
      }
    },
    "Button/Social": {
      "base": "w-full py-3 px-4 rounded-lg font-medium border transition-colors",
      "colors": "bg-white border-gray-300 text-gray-700 hover:bg-gray-50",
      "layout": "flex items-center justify-center space-x-2"
    },
    "Input/Text": {
      "base": "w-full px-3 py-3 rounded-lg border transition-colors",
      "colors": "border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500",
      "states": {
        "error": "border-red-500 focus:border-red-500 focus:ring-red-500",
        "disabled": "disabled:bg-gray-100 disabled:cursor-not-allowed"
      }
    },
    "Input/Password": {
      "base": "w-full px-3 py-3 pr-10 rounded-lg border transition-colors relative",
      "colors": "border-gray-300 focus:border-blue-500 focus:ring-1 focus:ring-blue-500",
      "icon": "absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 cursor-pointer"
    },
    "Checkbox": {
      "base": "h-4 w-4 rounded border-gray-300",
      "colors": "text-blue-600 focus:ring-blue-500"
    },
    "Label": {
      "base": "block text-sm font-medium",
      "colors": "text-gray-700"
    },
    "Link": {
      "base": "font-medium transition-colors",
      "colors": "text-blue-600 hover:text-blue-700"
    },
    "Card/Hero": {
      "base": "h-full rounded-l-2xl p-8 flex flex-col justify-between",
      "colors": "bg-blue-600 text-white",
      "content": "space-y-8"
    },
    "Card/Form": {
      "base": "h-full p-8 flex flex-col justify-center",
      "colors": "bg-white",
      "content": "max-w-md mx-auto w-full space-y-6"
    },
    "Testimonial": {
      "base": "space-y-4",
      "quote": "text-lg leading-relaxed",
      "author": "flex items-center space-x-3",
      "avatar": "w-12 h-12 rounded-full",
      "name": "font-semibold",
      "title": "text-sm opacity-90"
    },
    "PasswordStrength": {
      "container": "space-y-2",
      "indicator": "flex space-x-1",
      "dot": "h-1 w-full rounded-full",
      "requirements": "space-y-1",
      "requirement": "flex items-center space-x-2 text-xs",
      "icon": "h-3 w-3",
      "colors": {
        "weak": "bg-red-500",
        "medium": "bg-yellow-500",
        "strong": "bg-green-500",
        "inactive": "bg-gray-200",
        "valid": "text-green-600",
        "invalid": "text-gray-400"
      }
    }
  },
  "effects": {
    "shadow": {
      "card": "shadow-2xl",
      "input": "focus:shadow-sm"
    },
    "radius": {
      "default": "rounded-lg",
      "large": "rounded-2xl",
      "full": "rounded-full"
    },
    "transition": "transition-colors duration-200"
  },
  "spacing": {
    "container": "max-w-7xl mx-auto",
    "section": "py-12",
    "element": "space-y-4",
    "tight": "space-y-2",
    "loose": "space-y-6"
  },
  "accessibility": {
    "focusRing": "focus:outline-none focus:ring-2 focus:ring-offset-2",
    "screenReader": "sr-only",
    "contrast": "WCAG AA compliant - all color combinations meet 4.5:1 ratio"
  }
}
